<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/patreon.css" />
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
	</styles>
 	<scripts>
		<include src="file://{resources}/scripts/custom_game/patreon.js" />
	</scripts>
 	<Panel hittest="true" class="PatreonRoot">
		<TextButton id="PatreonButton" onactivate="OnPatreonButtonPressed()" text="Patreon Perks" />
 		<Panel hittest="true" id="PatreonWindow">
			<Panel hittest="true" class="VerticalScrollBar" />
			<Panel hittest="true" class="PatreonHeader">
					<Button id="PatreonCloseButton" onactivate="OnPatreonButtonPressed()" class="PatreonCloseButton">
						<Label id="PatreonCloseButtonLabel" class="PatreonCloseButtonLabel" text="X"/>
					</Button>
					<Label id="HeaderLabel" class="PatreonLabel" text="PATREON PERKS"/>
			</Panel>
			<Panel hittest="true" class="SupporterEmblem">
				<Label id="SupporterEmblemTitle" class="SupporterEmblemTitle" text=" Supporter Emblem "/>
				<Label id="SupporterEmblemLabel" class="SupporterEmblemLabel" text="In-game particle effect that follows your player, available in multiple colours."/>
				<Image id="SupporterEmblemImage" src="file://{images}/custom_game/patreon/emblem.png"/>
				<Label id="SupporterEmblemEnableDisableLabel" class="SupporterEmblemEnableDisableLabel" text="Enable Emblem:"/>
					<ToggleButton text="" id="EmblemEnableBox" onactivate="ToggleEmblem()" />
				<Label id="ChooseColourLabel" class="ChooseColourLabel" text="Choose Colour:"/>
				<DropDown oninputsubmit="UpdateEmblem()" id="ChooseColourDropDown">
					<Label text="Default (White)" id="SupporterEmblemDefault"/>
					<Label text="Red" id="SupporterEmblemRed"/>
					<Label text="Green" id="SupporterEmblemGreen"/>
					<Label text="Blue" id="SupporterEmblemBlue"/>
					<Label text="Cyan" id="SupporterEmblemCyan"/>
					<Label text="Yellow" id="SupporterEmblemYellow"/>
					<Label text="Pink" id="SupporterEmblemPink"/>
				</DropDown>
				<Panel hittest="true" class="Divider"/>
			</Panel>
			<Panel hittest="true" class="FreeBoots">
				<Label id="FreeBootsTitle" class="FreeBootsTitle" text=" Free Boots "/>
				<Label id="FreeBootsLabel" class="FreeBootsLabel" text="Start the game with free boots!"/>
				<Image id="FreeBootsImage" src="file://{images}/custom_game/patreon/boots.png"/>
				<Label id="FreeBootsEnableDisableLabel" class="FreeBootsEnableDisableLabel" text="Enable Boots:"/>
				<ToggleButton text="" class="FreeBootsEnableBox" />
				<Panel hittest="true" class="Divider2"/>
			</Panel>

			<Panel hittest="true" class="RandomButton">
				<Label id="RandomButtonTitle" class="RandomButtonTitle" text=" Unlimited Random "/>
				<Label id="RandomButtonLabel" class="RandomButtonLabel" text="Unlock unlimited use of smart random button!"/>
				<Image id="RandomButtonImage" src="file://{images}/custom_game/patreon/random_button.png"/>
			</Panel>
			<Panel hittest="true" class="PatreonFooter">
				<Button id="BecomeAPatronButton" class="BecomeAPatronButton">
					<Label id="BecomeAPatronButtonLabel" class="BecomeAPatronButtonLabel" text="Become a Patron" onactivate="ExternalBrowserGoToURL('https://www.patreon.com/join/dota2unofficial?');"/>
				</Button>
			</Panel>
		</Panel>
	</Panel>
</root>
